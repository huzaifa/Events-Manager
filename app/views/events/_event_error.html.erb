  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> 
        prohibited this event from being created:</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
