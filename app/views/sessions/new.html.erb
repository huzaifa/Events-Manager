<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :uni %><br />
    <%= f.text_field :uni %>
  </div>
  <div class="field">
    <%= f.label :ppassword, "Password" %><br />
    <%= f.password_field :ppassword %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
